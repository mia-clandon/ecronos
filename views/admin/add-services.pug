include navbar.pug
#mainform.container.col-sm-12
    #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style=" margin-top:50px")
        .panel.panel-info
            .panel-heading
                .panel-title Добавление новой услуги
            .panel-body
                form.form-horizontal(role="form" method="post" action="/admin/add-services/add-service")
                    .form-group
                        label.col-md-3.control-label(for="heading") Название
                        .col-sm-9
                            textarea#heading(name="heading")
                    .form-group
                        label.col-md-3.control-label(for="description") Описание
                        .col-sm-9
                            textarea#description(name="description")
                    .form-group
                        label.col-md-3.control-label(for="excerpt_description") Отрывок описания
                        .col-sm-9
                            textarea#excerpt_description(name="excerpt_description")
                    .form-group
                        label.col-md-3.control-label(for="en_heading") Название на английском
                        .col-sm-9
                            textarea#en_heading(name="en_heading")
                    .form-group
                        label.col-md-3.control-label(for="en_description") Описание на английском
                        .col-sm-9
                            textarea#en_description(name="en_description")
                    .form-group
                        label.col-md-3.control-label(for="excerpt_en_description") Отрывок описания на английском
                        .col-sm-9
                            textarea#excerpt_en_description(name="excerpt_en_description")
                    .form-group
                        .col-md-offset-3.col-md-9
                            button#btn-signup.btn.btn-info(type="submit")
                                i.icon-hand-right
                                |  &nbsp Загрузка
