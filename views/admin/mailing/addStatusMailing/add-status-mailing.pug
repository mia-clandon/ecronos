include ../../generalParts/navbar
#mainform.container.col-sm-12
    #signupbox.mainbox.col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2(style=" margin-top:50px")
        .panel.panel-info
            .panel-heading
                .panel-title Добавление нового почтового отправления
            .panel-body
                form.form-horizontal(role="form" method="post" action="/admin/add-status-mailing/add-status-mail")
                    .form-group
                        label(for="mailing") Серийный номер отправления
                            input#mail(list="mailing" name="serial_number")
                            datalist#mailing
                                if data.length
                                    each item in data
                                        option(value=item.serial_number)
                    .form-group
                        label(for="status") Статус отправления
                            input#status(list="statuss" name="status")
                            datalist#statuss
                                option(value="Получено курьером")
                                option(value="Принято в работу")
                                option(value="В обработке")
                                option(value="Передано для доставки")
                                option(value="В пути")
                                option(value="Прибыло в город доставки")
                                option(value="Ожидает получателя")
                                option(value="Передано курьеру")
                                option(value="Передано получателю")
                                option(value="Отправление получено получателем")
                                option(value="Срок хранения отправления вышел, готовиться к возврату отправителю")
                                option(value="Срок хранения отправления вышел, передано на возврат отправителю")
                                option(value="Срок хранения отправления вышел, возвращено отправителю")
                                option(value="Возвращено отправителю")
                                option(value="Получатель отказался от отправление, готовиться к возврату отправителю")
                                option(value="Получатель отказался от отправление, передано на возврат отправителю")
                                option(value="Получатель отказался от отправление, возвращено отправителю")
                    .form-group
                        label.col-md-3.control-label(for="start") Дата добавления
                        .col-sm-9
                            input#start(type="date" name="date" max="12-12-2100")
                        .form-group
                        .col-md-offset-3.col-md-9
                            button#btn-signup.btn.btn-info(type="submit")
                                i.icon-hand-right
                                |  &nbsp Загрузка
