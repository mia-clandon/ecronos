    include navbar.pug
    .nav_en_header
        a(href="/") Main page/
        a(href="/mailing") Tracking
        h1.header_ser Tracking
        form.form-horizontal(role="form" method="post" action="/en/mailing/search-mail" class="form_mailing")
            .form-group
                label.col-md-3.control-label(for ="serial_number") Shipping Number
                .form-send-group
                    input#heading(name="serial_number")
                    button#btn-signup.btn.btn-info(type="submit") Search
        .info_about_mailing
            p(style="text-align:center;").message= message
            if data.length
                each item in data
                    .info_mailing
                        p Serial number:&nbsp;
                            =item.serial_number
                        p &nbsp; Status:&nbsp;
                            =item.status
                        p  &nbsp; Date :&nbsp;
                            =item.date
